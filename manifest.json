{
	"manifest_version": 2,

	"name": "__MSG_General_Caption__",
	"description": "__MSG_General_Description__",
	"homepage_url": "http://www.coderect.com/",

	"version": "2.1.1",

	"default_locale": "en",

	"permissions": [ "alarms", "history", "tabs", "webRequest", "*://*.youtube.com/*", "*://*.ytimg.com/*" ],

	"icons": {
		"256": "content/images/icon.png"
	},

	"applications": {
		"gecko": {
			"id": "yourect@coderect.com",
			"strict_min_version": "49.0"
		}
	},

	"background": {
		"scripts": [ "background.js" ]
	},

	"content_scripts": [{
		"matches": [ "*://*.youtube.com/*" ],
		"css": [ "youtube.css" ],
		"js": [ "youtube.js" ]
	}],

	"content_security_policy": "script-src 'self' 'sha256-dyYnPoxt+OnVS8FgBlN/u+jViqFq5X5LccD86gDpX+w='; object-src 'self'; img-src 'self';",

	"browser_action": {
		"browser_style": false,
		"default_title": "Youtube Watchmarker",
		"default_icon": {
			"256" : "content/images/toolbaricon.png"
		}
	}
}