{
	"manifest_version": 2,

	"name": "Youtube Watchmarker",
	"description": "Automatically mark videos on Youtube that you have already watched.",
	"homepage_url": "https://sniklaus.com/",

	"version": "4.0.6",

	"permissions": [ "alarms", "downloads", "history", "tabs", "cookies", "webRequest", "*://*.youtube.com/*", "*://*.ytimg.com/*" ],

	"icons": {
		"72": "content/icon.png"
	},

	"applications": {
		"gecko": {
			"id": "yourect@coderect.com",
			"strict_min_version": "55.0"
		}
	},

	"background": {
		"scripts": [ "background.js" ]
	},

	"content_scripts": [{
		"matches": [ "*://*.youtube.com/*" ],
		"css": [ "youtube.css" ],
		"js": [ "youtube.js" ]
	}],

	"browser_action": {
		"browser_style": false,
		"default_title": "Youtube Watchmarker",
		"default_icon": {
			"72" : "content/icon.png"
		}
	}
}
